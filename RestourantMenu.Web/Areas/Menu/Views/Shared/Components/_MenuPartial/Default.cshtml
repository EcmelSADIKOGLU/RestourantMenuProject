@model List<FoodDto>

<section id="menu" class="menu">
    <div class="container">

        <div class="section-title">
            <h2><span>Lezzetli Menümüze</span> Göz Atın</h2>
        </div>

        <div class="row">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul id="menu-flters">
                    <li data-filter="*" class="filter-active">Tümünü Göster</li>
                    @foreach (var item in (List<CategoryDto>)ViewBag.Categories)
                    {
                        <li data-filter=".filter-@item.Name">@item.Name</li>
                    }
                </ul>
            </div>
        </div>

        <div class="row menu-container">

            @foreach (var item in Model)
            {
                <div class="col-lg-6 menu-item filter-@item.Categorydto.Name">
                    <div class="menu-content">
                        <a href="#">@item.Name</a><span>@item.Price</span>
                    </div>
                    <div class="menu-ingredients">
                        @item.Description
                    </div>
                </div>
            }


        </div>

    </div>
</section><!-- End Menu Section -->
