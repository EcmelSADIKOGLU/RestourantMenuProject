@model CategoryDto
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <h3 style="color:black; text-align:center">Kategori Ekle</h3>
</div>
<form class="form-control" method="post">

    <div style="padding : 3%">

        <input class="form-control" asp-for="Name" placeholder="Kategori Adı" />

        <br />
        <div class="form-check">
            <input class="form-check-input"  asp-for="Status"  id="status">
            <label class="form-check-label" for="status">Durum</label>
        </div>
        <button class="btn btn-outline-dark float-end" type="submit">Güncelle</button>

        <br />
    </div>

</form>

